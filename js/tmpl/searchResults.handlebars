
<ul class="SearchResults">
{{#each items}}
    <li class="SearchResults-item">
        <a href="{{link}}">
            {{#if pagemap.metatags.[0].search:title}}
                <h3 class="SearchResults-subTitle">{{pagemap.metatags.[0].search:title}}</h3>
            {{else}}
                <h3 class="SearchResults-subTitle">{{title}}</h3>
            {{/if}}

            {{#if pagemap.metatags.[0].search:description}}
                <p class="SearchResults-text">{{pagemap.metatags.[0].search:description}}</p>
            {{else}}
                <p class="SearchResults-text">{{snippet}}</p>
            {{/if}}
        </a>

        {{#ifEquals pagemap.metatags.[0].search:product "Maestro"}}
            <div class="Tag Tag--lrg">Maestro</div>
        {{/ifEquals}}

        {{#ifEquals displayLink "community.cloud66.com"}}
        	<div class="Tag Tag--lrg">Community</div>
        {{/ifEquals}}
    </li>
{{/each}}
</ul>
